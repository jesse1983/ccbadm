.container-fluid.container-bar 
  form.col-sm-4.col-sm-offset-4(ng-submit='vm.logon()', name='form', novalidate='')
    .login-form
      h1.text-center CCB ADM
      p.text-center Por favor, entre com seu e-mail e senha
      .form-group
        input#email.form-control.login-field(ng-model='vm.user.email', required='', type='text', value='', placeholder='Entre com seu e-mail', name='uEmail')
        label.login-field-icon.fa.fa-user(for='email')
      .form-group
        input#password.form-control.login-field(ng-model='vm.user.password', required='', type='password', value='', placeholder='Entre com sua senha', name='uPassword')
        label.login-field-icon.fa.fa-lock(for='password')
      .alert.alert-danger.alert-dismissible.nga-fast.nga-stagger.nga-rotate-down(role='alert', ng-show='vm.error')
        small
          button.close(type='button', ng-click='vm.error = null')
            span(aria-hidden='true') Ã—
          | 	            	{{vm.error.error}}
      button.btn.btn-primary.btn-lg.btn-block(type='submit', action-button='vm.loading') Entrar
